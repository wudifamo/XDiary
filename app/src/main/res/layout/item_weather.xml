<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/ripple_bg"
    android:clickable="true"
    android:paddingLeft="8dp">

    <TextView
        android:id="@+id/witem_date"
        android:layout_width="54dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="right"/>

    <View
        android:id="@+id/witem_line"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/witem_date"
        android:background="@color/colorAccent"/>

    <ImageView
        android:id="@+id/witem_weather"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignLeft="@id/witem_line"
        android:layout_centerVertical="true"
        android:layout_marginLeft="-12dp"
        android:background="@color/white"
        android:src="@drawable/weather_sunny"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/witem_line"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/witem_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/witem_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"/>
    </LinearLayout>


</RelativeLayout>